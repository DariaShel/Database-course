SELECT Предприятия.название, Покупатели.название, дата_поставки FROM Поставки
JOIN Предприятия ON Предприятия.id_предприятия = Поставки.id_предприятия
JOIN Покупатели ON Покупатели.id_покупателя = Поставки.id_покупателя;
