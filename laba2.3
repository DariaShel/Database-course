SELECT Предприятия.название,
	   основной_вид_деятельности,
	   Вд1.название,
	   Двд.id_деятельности,
	   Вд2.название
FROM Предприятия
JOIN Виды_деятельности Вд1 ON Предприятия.основной_вид_деятельности = Вд1.id_деятельности
JOIN Дополнительный_вид_деятельности Двд ON Предприятия.id_предприятия = Двд.id_предприятия
JOIN Виды_деятельности Вд2 ON Двд.id_деятельности = Вд2.id_деятельности;
--------------------------------------------------------------------
SELECT Предприятия.название,
	   Продукция.название,
	   закупочная_цена,
	   цена_продаж,
	   цена_продаж - закупочная_цена AS разница
FROM Предприятия
JOIN Цена_продажи Цп ON Предприятия.id_предприятия = Цп.id_предприятия
JOIN Продукция ON Продукция.id_продукции = Цп.id_продукции
JOIN Товары ON Товары.название = Продукция.название;
