SELECT Поставки.id_поставки,
	   Продукция.название,
	   единица_измерения,
	   объём,
	   Поставки.дата_поставки,
	   срок_годности
FROM Поставки
JOIN Поставки_продукция ON Поставки.id_поставки = Поставки_продукция.id_поставки
JOIN Продукция ON Продукция.id_продукции = Поставки_продукция.id_продукции
JOIN Товары ON Продукция.название = Товары.название
JOIN Срок_годности ON Продукция.id_продукции = Срок_годности.id_продукции;
